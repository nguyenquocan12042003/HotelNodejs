<main>
  <!-- Hero Section -->
  <section class="hero">
    <h2>Chào mừng đến với Hotel Paradise</h2>
    <p>Nơi nghỉ dưỡng tuyệt vời với dịch vụ 5 sao.</p>
    <button>Đặt phòng ngay</button>
  </section>

  <!-- About Section -->
  <section class="about">
    <div class="container">
      <img src="https://decoxdesign.com/upload/images/mau-khach-san-5-sao-05-decox-design.jpg" alt="Khách sạn">
      <div>
        <h2>Về khách sạn chúng tôi</h2>
        <p>Hotel Paradise mang đến trải nghiệm nghỉ dưỡng sang trọng, dịch vụ đẳng cấp quốc tế,
          với vị trí đắc địa ngay cạnh bờ biển.</p>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="services">
    <h2>Dịch vụ nổi bật</h2>
    <div class="service-list">
      <div class="service">
        <img src="https://cdn-icons-png.flaticon.com/512/2738/2738898.png" alt="Spa">
        <h3>Spa & Massage</h3>
      </div>
      <div class="service">
        <img src="https://cdn-icons-png.flaticon.com/512/584/584754.png" alt="Pool">
        <h3>Hồ bơi ngoài trời</h3>
      </div>
      <div class="service">
        <img src="https://cdn-icons-png.flaticon.com/512/3075/3075977.png" alt="Restaurant">
        <h3>Nhà hàng sang trọng</h3>
      </div>
    </div>
  </section>

  <!-- Featured Rooms -->
  <section class="featured-rooms">
    <h2>Phòng nổi bật</h2>
    <div class="room-list">
      <% if (rooms && rooms.length> 0) { %>
        <% rooms.forEach(room=> { %>
          <div class="room">
            <img src="<%= room.image %>" alt="<%= room.name %>">
            <h3>
              <%= room.name %>
            </h3>
            <p>Giá: <%= room.price.toLocaleString() %>đ/đêm</p>
            <div class="actions">
              <a href="/rooms/<%= room.id %>" class="btn">Xem chi tiết</a>
              <button class="btn">Đặt ngay</button>
            </div>
          </div>
          <% }) %>
            <% } else { %>
              <p>Hiện chưa có phòng nào.</p>
              <% } %>
    </div>
  </section>

</main>